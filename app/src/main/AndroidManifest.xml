<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.uk.kisanmarket">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- adding internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- adding permission -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".CerealActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".UploadProductActivity" />
        <activity android:name=".ProductViewActivity" />
        <activity android:name=".PlaceOrderActivity" />
        <activity android:name=".MyOrderActivity" />
        <activity android:name=".VegetableActivity" />
        <activity android:name=".SeedActivity" />
        <activity android:name=".FruitActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".OnlineSupportActivity" />
        <activity android:name=".NotificationActivity" />
        <activity android:name=".ViewBalanceActivity"></activity>
    </application>

</manifest>